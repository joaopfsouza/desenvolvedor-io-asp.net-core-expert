@using DevIO.App.Extensions 
@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Novo Fornecedor</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Documento)
            </th>
    
            <th>
                @Html.DisplayNameFor(model => model.Ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
               @this.FormataDocumento(item.TipoFornecedor,item.Documento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ativo)
            </td>
            <td class="text-right">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="fa fa-search" ></span></a> 
                <a asp-action="Edit" disable-by-claim-name="Fornecedor" disable-by-claim-value="Editar" asp-route-id="@item.Id" class="btn btn-warning" ><span class="fa fa-pencil-alt"></span></a> 
                <a asp-action="Delete" supress-by-claim-name="Fornecedor" supress-by-claim-value="Excluir" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash" ></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
