@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

@{ 
    if (Model == null)
    {
        <div>
            <h2>Oooopsss, ocorreu  um erro, mas não se preocupe. Será corrigido em breve</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}